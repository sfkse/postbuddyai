generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  active   Boolean    @default(true)
  username String     @unique
  email    String     @unique
  userRole Int        @default(0)
  Campaign Campaign[]
  Tweets   Tweets[]
}

model Campaign {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  startDate   DateTime
  endDate     DateTime
  status      Int
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  Topics      Topics[]
  Tweets      Tweets[]
}

model Topics {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  status      Int
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  campaignId  Int
}

model Tweets {
  id          Int       @id @default(autoincrement())
  tweet       String
  status      Int
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  scheduledAt DateTime
  Campaign    Campaign? @relation(fields: [campaignId], references: [id])
  campaignId  Int?
}
